@using Hitechsoft.CRM.Authorization
@using Hitechsoft.CRM.Web.Areas.App.Models.MedicalSpecialties
@using Hitechsoft.CRM.Web.Areas.App.Startup
@model MedicalSpecialtiesViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.MedicalSpecialties;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/MedicalSpecialties/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

                <abp-page-subheader title="@L("MedicalSpecialties")" description="@L("MedicalSpecialtiesHeaderInfo")">
                     <button id="ExportToExcelButton" class="btn btn-sm btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            
                     @if (IsGranted(AppPermissions.Pages_MedicalSpecialties_Create))
                     {
                         <button id="CreateNewMedicalSpecialtyButton" class="btn btn-primary blue btn-sm"><i class="fa fa-plus"></i> @L("CreateNewMedicalSpecialty")</button>                
                     }
                </abp-page-subheader>
            
<div class="@(await GetContainerClass())">   
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="MedicalSpecialtiesTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetMedicalSpecialtiesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="CodeFilterId">@L("Code")</label>
									<input type="text" class="form-control" name="codeFilter" id="CodeFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="NameFilterId">@L("Name")</label>
									<input type="text" class="form-control" name="nameFilter" id="NameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="FullnameFilterId">@L("Fullname")</label>
									<input type="text" class="form-control" name="fullnameFilter" id="FullnameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="DecisionCodeFilterId">@L("DecisionCode")</label>
									<input type="text" class="form-control" name="decisionCodeFilter" id="DecisionCodeFilterId">
								</div>
                            </div>
                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinStatusFilterId">@L("MinMax") @L("Status")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minStatusFilter" id="MinStatusFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxStatusFilter"  id="MaxStatusFilterId"/>
									</div>
                                </div>
                            </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="MedicalSpecialtiesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th></th>
                            
                            <th>@L("Actions")</th>
								<th>@L("Code")</th>
								<th>@L("Name")</th>
								<th>@L("Fullname")</th>
								<th>@L("DecisionCode")</th>
								<th>@L("Status")</th>
                            
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>